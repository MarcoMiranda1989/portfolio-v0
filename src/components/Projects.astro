---
// Importamos el componente ProjectCard Y los componentes SVG/Iconos desde el archivo JSX
import { ProjectCard, ReactLogo, GitHub, JavaScript } from '../components/ProjectCard.jsx';
import image1 from '/src/assets/profile.jpg';
// Nota: Si usaste 'export const' en ProjectCard, la importación debe ser destructurada.

// 1. Definición de la DATA (¡Aquí usamos las variables importadas!)
const projects = [
    { 
        name: 'API RESTFUL de Canciones, albumes y artistas', 
        description: 'API RESTFUL con Node.js, Express, PostreSQL y prisma para gestionar canciones, álbumes y artistas, diseñada para ser consumida por aplicaciones frontend ', 
        image: '/pr1.png',
        techStack: [
            { name: 'React', icon: ReactLogo }, 
            { name: 'TypeScript', icon: GitHub }, // Usando GitHub como placeholder de TS
        ]
    },
    { 
        name: 'Dashboard Admin', 
        description: 'Panel de control con gráficos en tiempo real.', 
        image: 'https://picsum.photos/380/280',
        techStack: [
            { name: 'JavaScript', icon: JavaScript }, 
            { name: 'React', icon: ReactLogo },
        ]
    },
    {  
        name: 'Landing Page', 
        description: 'Sitio web estático enfocado en velocidad.', 
        image: 'https://picsum.photos/380/280',
        techStack: [
            { name: 'Astro', icon: JavaScript }, // Placeholder
            { name: 'Tailwind', icon: GitHub },  // Placeholder
        ]
    },
];

---
<section id="projects" class="flex flex-col items-center justify-center py-16">
    <div class="flex lg:flex-col lg:items-start justify-center lg:w-[60%] w-full pl-50 px-4 flex-col max-w-7xl">
        
        <!-- TÍTULO DE LA SECCIÓN -->
        <div class="text-3xl font-bold pb-10 text-gray-900 dark:text-white flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-indigo-500">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776" />
            </svg>
            Mis Proyectos
        </div>

        <!-- LISTA DE PROYECTOS (ITERACIÓN) -->
        <div class="flex flex-col justify-start gap-10 w-full pb-20">
            {
                projects.map(project => (
                    // 2. Usamos .map() para iterar sobre la data
                    // 3. Pasamos las props con los datos del objeto 'project'
                    <ProjectCard 
                        name={project.name} 
                        description={project.description} 
                        techStack={project.techStack}  
                        image={project.image} 
                        client:load 
                    />
                ))
            }
        </div>
    </div>
</section>